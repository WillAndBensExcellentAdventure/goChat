{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "indent":0,
    "camelcase": 1,
    "no-console": "off",
    "comma-dangle": "off",
    "react/jsx-filename-extension": "off",
    "global-require": 1,
    "no-underscore-dangle": 0,
    "class-methods-use-this": 0,
    "max-len": [
      2,
      80,
      2,
      {
      "ignoreUrls": true,
      "ignoreComments": true,
      "comments": 100
      }
    ],
    "function-paren-newline": 0,
    "no-nested-ternary": 1
  }
}
